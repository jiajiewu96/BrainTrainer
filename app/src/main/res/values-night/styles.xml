<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Base.AppTheme"></style>
    <!-- Dark application theme. -->
    <style name="Base.AppTheme" parent="Theme.AppCompat.DayNight.DarkActionBar" >
        <!-- Customize your theme here. -->

        <item name="colorPrimary">@color/colorSecondary</item>
        <item name="android:colorBackground">@color/colorBackgroundDark</item>
        <item name="colorAccent">@color/colorSecondaryAccent</item>
        <item name="colorPrimaryDark">@color/colorSecondaryDark</item>
        <item name="android:textColorPrimary">@color/textColorDark</item>
        <item name="android:textColorPrimaryInverse">@color/colorSecondary</item>
        <item name="android:textColorSecondary">@color/textColorDarkSecondary</item>
        <item name="android:buttonStyle"> @style/ButtonColor</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
    </style>
    <style name="ButtonColor" parent="@android:style/Widget.Button">
        <item name="android:textColor"> @color/colorSecondaryDark</item>
    </style>

</resources>