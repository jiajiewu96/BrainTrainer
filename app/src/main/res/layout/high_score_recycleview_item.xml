<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <TextView
        android:id="@+id/playerNameItemView"
        android:layout_width="188dp"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:text="@string/player_name_text_view_default"
        android:textSize="24sp"
        android:background="@drawable/my_boarder"
        android:padding="4dp"/>

    <TextView
        android:id="@+id/playerScoreItemView"
        android:layout_width="wrap_content"
        android:layout_height="61dp"
        android:layout_weight="1"
        android:text="@string/score_text_view_default"
        android:textSize="24sp"
        android:background="@drawable/my_boarder"
        android:padding="4dp"/>

    <TextView
        android:id="@+id/playerPercentCorrectItemView"
        android:layout_width="wrap_content"
        android:layout_height="61dp"
        android:layout_weight="1"
        android:text="@string/percent_text_view_default"
        android:textSize="24sp"
        android:background="@drawable/my_boarder"
        android:padding="4dp"/>
</LinearLayout>